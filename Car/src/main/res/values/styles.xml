<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- tab 子栏的 style -->
    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- tab选择界面的cbox的style -->
    <style name="cbTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <!-- settings btn1 -->
    <style name="settings_btn1" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/settings_btn1_bg</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#eee</item>
    </style>
    <!-- diaolog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/app_face_background_down</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- bbs9btn -->
    <style name="bbs9btn">
        <item name="android:gravity">center</item>
        <item name="android:onClick">MyClick</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">#fff</item>
    </style>

</resources>